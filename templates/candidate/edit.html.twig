{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}
{% block stylesheets %}
    <style>
        select {
            display: block!important;
        }
    </style>
    {% endblock %}

{% block body %}
<script>
    let elmsHeader = document.getElementsByClassName("dropdown");

    let indexElm = 0;
    for (let elmHeader of elmsHeader) {
        elmHeader.classList.remove("active");
    }
    elmsHeader[indexElm].classList.add("active");
</script>
<div class="base">

    <!-- Page -->
    <div class="page">

        <!-- Page Header-->
        <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">Your profile</h2>
                        <span class="white-text">Personnal & Professionnal informations</span>
                        <ol class="breadcrumb">
                            <li><a href="{{ path('app_index') }}">Home</a></li>
                            <li class="active">Profile</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>


        <!-- Page Content-->
        <section class="gray-bg">
            <div class="container">
                <div class="row">
                {% if candidate.percentage == 100 %}
                    <div class="score-container">
                        <h4>
                            <img src="https://i.imgur.com/s9bPVaK.gif" style="height: 80px; width: 201px;"> &nbsp;
                            &nbsp; Hooray ! Your profile is complete.
                        </h4>
                        <div class="c100 p100 small complete ">
                            <span>{{candidate.percentage}}%</span>
                            <div class="slice">
                                <div class="bar"></div>
                                <div class="fill"></div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="score-container">
                        <div class="c100 p100 small ">
                            <span>{{candidate.percentage}}%</span>
                            <div class="slice">
                                <div class="bar"></div>
                                <div class="fill"></div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                    <div class="clearfix"></div>
                </div>
            </div>
        </section>
    {{ include('candidate/_form.html.twig', {'button_label': 'Update NOW'}) }}
    <div class="row">
                        <div class="col-xs-12 mt-40 mb-80 delete-account">
                        <form method="post" action="{{ path('app_candidate_delete', {'id': candidate.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ candidate.id) }}">
                            <button class="btn btn-block btn-lg waves-effect waves-light"><i class="material-icons">&#xE872;</i>Delete my account</button>
                        </form>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-4">
                            <a href="#!" class="btn btn-block btn-lg border primary waves-effect waves-light"><i class="fa fa-long-arrow-left"></i> Back home</a>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-4">
                            <button type="submit" class="btn btn-block btn-lg gradient secondary waves-effect waves-light">
                                <span><strong>UPDATE</strong> NOW</span>
                            </button>
                        </div>
                    </div>

                </div>
            </section>
    
    </div>

</div>
<script>
    let bugs = document.getElementsByClassName('boxshadow');
    let bug = bugs[0];
    bug.classList.remove('boxshadow');
</script>

{% endblock %}
